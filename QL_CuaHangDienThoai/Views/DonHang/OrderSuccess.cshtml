@using QL_CuaHangDienThoai.Helpers
@model QL_CuaHangDienThoai.Models.HoaDon
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-success">
            <div class="card-header bg-success text-white text-center">
                <h4>🎉 Đặt hàng thành công!</h4>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-check-circle fa-5x text-success mb-3"></i>
                    <h5>Cảm ơn bạn đã đặt hàng!</h5>
                    <p class="text-muted">Đơn hàng của bạn đã được tiếp nhận và đang được xử lý.</p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h6>📋 Thông tin đơn hàng</h6>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Mã đơn hàng:</strong></td>
                                <td><span class="badge bg-primary">@Model.MaHD</span></td>
                            </tr>
                            <tr>
                                <td><strong>Ngày đặt:</strong></td>
                                <td>@Model.NgayLap.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <td><strong>Khách hàng:</strong></td>
                                <td>@Model.KhachHang?.HoTen</td>
                            </tr>
                            @if (Model.QuanTriVien != null)
                            {
                                <tr>
                                    <td><strong>Nhân viên xử lý:</strong></td>
                                    <td>@Model.QuanTriVien.HoTen (@Model.QuanTriVien.MaQTV)</td>
                                </tr>
                            }
                            <tr>
                                <td><strong>Tổng tiền:</strong></td>
                                <td><strong class="text-success">@Model.TongTien.ToString("C0")</strong></td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h6>📦 Chi tiết sản phẩm</h6>
                        @foreach (var item in Model.ChiTietHoaDons)
                        {
                            <div class="card mb-2">
                                <div class="card-body p-2">
                                    <div class="row align-items-center">
                                        <div class="col-3">
                                            <img src="@ImageHelper.GetProductImage(item.MaDT)"
                                                 alt="@item.DienThoai?.TenDT"
                                                 class="img-fluid rounded"
                                                 style="max-height: 60px; object-fit: contain;" />
                                        </div>
                                        <div class="col-9">
                                            <h6 class="mb-1">@item.DienThoai?.TenDT</h6>
                                            <small class="text-muted">
                                                @item.SoLuong x @item.DonGia.ToString("C0") =
                                                <strong class="text-success">@item.ThanhTien.ToString("C0")</strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <hr />

                <div class="alert alert-info">
                    <h6>📞 Thông tin liên hệ:</h6>
                    <p class="mb-1">🏪 <strong>Cửa hàng điện thoại</strong></p>
                    <p class="mb-1">📱 Hotline: <strong>1900-1234</strong></p>
                    <p class="mb-1">📧 Email: <strong>support@store.com</strong></p>
                    <p class="mb-0">🕒 Thời gian xử lý: <strong>1-2 ngày làm việc</strong></p>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">
                        🛍️ Tiếp tục mua sắm
                    </a>
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.MaHD" class="btn btn-outline-info">
                            👁️ Xem chi tiết
                        </a>
                        <a asp-action="MyOrders" class="btn btn-success">
                            📋 Đơn hàng của tôi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>