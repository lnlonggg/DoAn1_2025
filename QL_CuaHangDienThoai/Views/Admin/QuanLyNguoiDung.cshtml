@model IEnumerable<QL_CuaHangDienThoai.Models.TaiKhoan>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h2>👥 Quản lý người dùng</h2>
        <p class="text-muted">Quản lý tài khoản và phân quyền người dùng</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Account" asp-action="RegisterAdmin" class="btn btn-primary">
            ➕ Thêm tài khoản
        </a>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5>Admin</h5>
                <h3>@Model.Count(u => u.VaiTro == "admin")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5>Nhân viên</h5>
                <h3>@Model.Count(u => u.VaiTro == "nhanvien")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5>Khách hàng</h5>
                <h3>@Model.Count(u => u.VaiTro == "khach")</h3>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <strong>@user.TenDangNhap</strong>
                            </td>
                            <td>
                                @if (user.VaiTro == "khach" && user.KhachHang != null)
                                {
                                    @user.KhachHang.HoTen
                                }
                                else if (user.VaiTro != "khach" && user.QuanTriVien != null)
                                {
                                    @user.QuanTriVien.HoTen
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </td>
                            <td>
                                @if (user.VaiTro == "khach" && user.KhachHang != null)
                                {
                                    @user.KhachHang.Email
                                }
                                else if (user.VaiTro != "khach" && user.QuanTriVien != null)
                                {
                                    @user.QuanTriVien.Email
                                }
                            </td>
                            <td>
                                @switch (user.VaiTro)
                                {
                                    case "admin":
                                        <span class="badge bg-danger">👑 Admin</span>
                                        break;
                                    case "nhanvien":
                                        <span class="badge bg-success">👨‍💼 Nhân viên</span>
                                        break;
                                    case "khach":
                                        <span class="badge bg-info">👤 Khách hàng</span>
                                        break;
                                }
                            </td>
                            <td>
                                <span class="badge bg-success">🟢 Hoạt động</span>
                            </td>
                            <td>
                                @if (user.TenDangNhap != User.Identity.Name)
                                {
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" onclick="editUser('@user.TenDangNhap')">
                                            ✏️ Sửa
                                        </button>
                                        @if (user.VaiTro != "admin")
                                        {
                                            <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@user.TenDangNhap')">
                                                🗑️ Xóa
                                            </button>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Tài khoản hiện tại</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editUser(username) {
            alert(`Chức năng sửa người dùng ${username} sẽ được phát triển tiếp!`);
        }

        function confirmDelete(username) {
            if (confirm(`Bạn có chắc chắn muốn xóa tài khoản "${username}"?`)) {
                alert(`Chức năng xóa người dùng ${username} sẽ được phát triển tiếp!`);
            }
        }
    </script>
}