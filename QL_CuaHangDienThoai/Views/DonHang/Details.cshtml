@using QL_CuaHangDienThoai.Helpers
@model QL_CuaHangDienThoai.Models.HoaDon
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>📋 Chi tiết đơn hàng @Model.MaHD</h4>
            </div>
            <div class="card-body">
                <!-- Thông tin đơn hàng -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6>👤 Thông tin khách hàng</h6>
                        <p class="mb-1"><strong>Họ tên:</strong> @Model.KhachHang?.HoTen</p>
                        <p class="mb-1"><strong>Số điện thoại:</strong> @Model.KhachHang?.SoDT</p>
                        <p class="mb-0"><strong>Email:</strong> @Model.KhachHang?.Email</p>
                    </div>
                    <div class="col-md-6">
                        <h6>📅 Thông tin đơn hàng</h6>
                        <p class="mb-1"><strong>Mã đơn hàng:</strong> <span class="badge bg-primary">@Model.MaHD</span></p>
                        <p class="mb-1"><strong>Ngày đặt:</strong> @Model.NgayLap.ToString("dd/MM/yyyy HH:mm")</p>

                        @if (Model.QuanTriVien != null)
                        {
                            <p class="mb-1">
                                <strong>Nhân viên xử lý:</strong>
                                <span class="badge bg-info">@Model.QuanTriVien.MaQTV</span> - @Model.QuanTriVien.HoTen
                            </p>
                        }
                        else
                        {
                            <p class="mb-1"><strong>Nhân viên xử lý:</strong> <span class="text-muted">Chưa xác định</span></p>
                        }
                    </div>
                </div>

                <!-- Chi tiết sản phẩm -->
                <h6>📦 Sản phẩm đã đặt</h6>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Sản phẩm</th>
                                <th class="text-center">Số lượng</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietHoaDons)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@ImageHelper.GetProductImage(item.MaDT)"
                                                 alt="@item.DienThoai?.TenDT"
                                                 class="me-3 rounded"
                                                 style="width: 50px; height: 50px; object-fit: contain; background: #f8f9fa;" />
                                            <div>
                                                <h6 class="mb-1">@item.DienThoai?.TenDT</h6>
                                                <small class="text-muted">Mã: @item.MaDT</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.SoLuong</td>
                                    <td class="text-end">@item.DonGia.ToString("C0")</td>
                                    <td class="text-end"><strong>@item.ThanhTien.ToString("C0")</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng:</th>
                                <th class="text-end text-success">@Model.TongTien.ToString("C0")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    @if (User.HasClaim("VaiTro", "khach"))
                    {
                        <a asp-action="MyOrders" class="btn btn-secondary">
                            ⬅️ Quay lại đơn hàng
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-secondary">
                            ⬅️ Quay lại danh sách
                        </a>
                    }

                    <button class="btn btn-primary" onclick="window.print()">
                        🖨️ In hóa đơn
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6>📊 Tóm tắt đơn hàng</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Tổng sản phẩm:</span>
                    <span>@Model.ChiTietHoaDons.Sum(c => c.SoLuong)</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Tổng tiền hàng:</span>
                    <span>@Model.TongTien.ToString("C0")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Phí vận chuyển:</span>
                    <span class="text-success">Miễn phí</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <strong>Tổng thanh toán:</strong>
                    <strong class="text-success">@Model.TongTien.ToString("C0")</strong>
                </div>

                <hr />

                <div class="text-center">
                    <span class="badge bg-success p-2">
                        ✅ Đã xác nhận đơn hàng
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>