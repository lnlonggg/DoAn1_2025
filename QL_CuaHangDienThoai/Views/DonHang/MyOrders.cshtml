@using QL_CuaHangDienThoai.Helpers
@model IEnumerable<QL_CuaHangDienThoai.Models.HoaDon>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>📋 Đơn hàng của tôi</h2>
        <p class="text-muted">Quản lý và theo dõi các đơn hàng đã đặt</p>
    </div>
</div>

@if (Model.Any())
{
    @foreach (var order in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h6 class="mb-0">
                            Đơn hàng <span class="badge bg-primary">@order.MaHD</span>
                        </h6>
                        <small class="text-muted">@order.NgayLap.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <h5 class="text-success mb-0">@order.TongTien.ToString("C0")</h5>
                        <span class="badge bg-success">✅ Đã đặt hàng</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in order.ChiTietHoaDons)
                    {
                        <div class="col-md-6 mb-2">
                            <div class="d-flex align-items-center">
                                <img src="@ImageHelper.GetProductImage(item.MaDT)"
                                     alt="@item.DienThoai?.TenDT"
                                     class="me-3 rounded"
                                     style="width: 60px; height: 60px; object-fit: contain; background: #f8f9fa;" />
                                <div>
                                    <h6 class="mb-1">@item.DienThoai?.TenDT</h6>
                                    <small class="text-muted">
                                        Số lượng: @item.SoLuong |
                                        Đơn giá: @item.DonGia.ToString("C0")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-end mt-3">
                    <a asp-action="Details" asp-route-id="@order.MaHD" class="btn btn-outline-primary btn-sm">
                        👁️ Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-shopping-cart fa-5x text-muted mb-3"></i>
        <h5 class="text-muted">Bạn chưa có đơn hàng nào</h5>
        <p class="text-muted">Hãy khám phá các sản phẩm tuyệt vời của chúng tôi!</p>
        <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">
            🛍️ Bắt đầu mua sắm
        </a>
    </div>
}